@model IEnumerable<SCA.Models.Departamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departamentos</h2>

<p>
    @Html.ActionLink("Agregar Nuevo", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id del departamento
            </th>
            <th>
                Nombre del departamento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDepartamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdDepartamento }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdDepartamento }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.IdDepartamento })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}