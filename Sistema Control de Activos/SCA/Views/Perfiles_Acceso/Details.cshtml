@model SCA.Models.PerfilesViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>PerfilesViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id_Perfil)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id_Perfil)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NombrePerfil)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombrePerfil)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            Permisos
        </dt>

        <dd>
            @foreach (var Item in Model.ModulosEscogidos)
            {
                @Html.Raw(Item.Modulo);
                @Html.Raw("<br/>");
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new {  id = Model.Id_Perfil }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>
