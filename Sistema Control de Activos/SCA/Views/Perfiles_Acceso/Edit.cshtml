@model SCA.Models.PerfilesViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Perfiles de acceso</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Id_Perfil">Id del perfil</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id_Perfil, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Id_Perfil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="NombrePerfil">Nombre del perfil</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombrePerfil, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombrePerfil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <h3>Permisos</h3>
        <div class="row ">
            <!--Permisos-->

            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[0].Modulo" value="Departamentos" />
                <input type="checkbox" name="ModulosEscogidos[0].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "Departamentos").FirstOrDefault() != null) { @Html.Raw("Checked") }>

                <label for="ModulosEscogidos_0__Checked">Departamentos</label>

            </div>

            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[1].Modulo" value="Colaboradores" />
                <input type="checkbox" name="ModulosEscogidos[1].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "Colaboradores").FirstOrDefault() != null) { @Html.Raw("Checked") }>
                <label for="ModulosEscogidos[1].Checked">Colaboradores</label>
            </div>
            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[2].Modulo" value="Licencias" />
                <input type="checkbox" name="ModulosEscogidos[2].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "Licencias").FirstOrDefault() != null) { @Html.Raw("Checked") }>
                <label for="ModulosEscogidos[2].Checked">Licencias</label>
            </div>
            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[3].Modulo" value="Usuario" />
                <input type="checkbox" name="ModulosEscogidos[3].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "Usuario").FirstOrDefault() != null) { @Html.Raw("Checked") }>
                <label for="ModulosEscogidos[3].Checked">Usuarios</label>
            </div>
        </div>
        <div class="row">
            <br />
            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[4].Modulo" value="Personal" />
                <input type="checkbox" name="ModulosEscogidos[4].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "Personal").FirstOrDefault() != null) { @Html.Raw("Checked") }>
                <label for="ModulosEscogidos[4].Checked">Personal</label>
            </div>
            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[5].Modulo" value="ControlInventario" />
