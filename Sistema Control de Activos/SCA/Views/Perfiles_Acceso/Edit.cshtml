                <label for="ModulosEscogidos[8].Checked">Mantenimiento de Inventario</label>
            </div>
            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[9].Modulo" value="MantenimientoVehículos" />
                <input type="checkbox" name="ModulosEscogidos[9].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "MantenimientoVehículos").FirstOrDefault() != null) { @Html.Raw("Checked") }>
                <label for="ModulosEscogidos[9].Checked">Mantenimiento de Vehículos</label>
            </div>
            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[10].Modulo" value="Perfiles" />
                <input type="checkbox" name="ModulosEscogidos[10].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "Perfiles").FirstOrDefault() != null) { @Html.Raw("Checked") }>
                <label for="ModulosEscogidos[10].Checked">Perfiles</label>
            </div>
            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[11].Modulo" value="Inventario" />
                <input type="checkbox" name="ModulosEscogidos[11].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "Inventario").FirstOrDefault() != null) { @Html.Raw("Checked") }>
                <label for="ModulosEscogidos[11].Checked">Inventario</label>
            </div>
            <div class="col-8">
                <input type="hidden" name="ModulosEscogidos[12].Modulo" value="BitacoraEntrada/Salida" />
                <input type="checkbox" name="ModulosEscogidos[12].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "BitacoraEntrada/Salida").FirstOrDefault() != null) { @Html.Raw("Checked") }>
                <label for="ModulosEscogidos[12].Checked">Reporte Bitácora Entrada / Salida</label>
