                <label for="ModulosEscogidos[6].Checked">Control de Vehículos</label>
            </div>
            <div class="col-3">
                <input type="hidden" name="ModulosEscogidos[7].Modulo" value="Flotilla" />
                <input type="checkbox" name="ModulosEscogidos[7].Checked" value="true" @if (Model.ModulosEscogidos.Where(x => x.Modulo == "Flotilla").FirstOrDefault() != null) { @Html.Raw("Checked") }>
                <label for="ModulosEscogidos[7].Checked">Flotilla</label>
            </div>
        </div>
        <div class="row">
