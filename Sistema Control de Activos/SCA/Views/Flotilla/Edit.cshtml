            @Html.LabelFor(model => model.Traccion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="Traccion" class="form-control">
                    <option value="0">4x2</option>
                    <option value="1" @if (Model.Traccion > 0) { @Html.Raw("selected") }>4x4</option>
